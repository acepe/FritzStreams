<resources>

    <style name="FritzAppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="android:focusedMonthDateColor">@color/red_fritz</item>
        <item name="android:unfocusedMonthDateColor">@color/red_brighter</item>
        <item name="android:weekNumberColor">@color/red_brighter</item>
        <item name="android:selectedWeekBackgroundColor">@color/yellow_fritz</item>

    </style>

    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/yellow_fritz</item>
        <item name="android:textColor">@color/red_fritz</item>
    </style>

</resources>
