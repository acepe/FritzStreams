<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/downloadsFreespace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_fritz_bright"
        android:gravity="end"
        android:text="@string/download_freespace" />

    <LinearLayout
        android:id="@+id/downloadsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/yellow_fritz"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>